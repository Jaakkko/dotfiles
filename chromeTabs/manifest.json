{
    "manifest_version": 3,
    "name": "Tabs",
    "version": "0.2",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs"
    ],
    "host_permissions": ["*://*/*"],
    "commands": {
        "nextTab": {
            "suggested_key": {
                "default": "Alt+L"
            },
            "description": "Go to next tab"
        },
        "previousTab": {
            "suggested_key": {
                "default": "Alt+H"
            },
            "description": "Go to previous tab"
        },
        "moveTabRight": {
            "suggested_key": {
                "default": "Alt+Shift+L"
            },
            "description": "Move current tab right"
        },
        "moveTabLeft": {
            "suggested_key": {
                "default": "Alt+Shift+H"
            },
            "description": "Move current tab left"
        }
    }
}